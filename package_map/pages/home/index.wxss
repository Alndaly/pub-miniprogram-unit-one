/* package_map/pages/home/index.wxss */
.back {
  padding: 14rpx;
  z-index: 10000;
  position: absolute;
  border-radius: 50%;
  background-color: #00000055;
}

.callout {
  border-radius: 10rpx;
  background-color: white;
  padding: 10px;
}

.search-box {
  background-color: white;
  position: fixed;
  padding: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 0 10px #00000022;
}

.input-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 10px;
  align-items: center;
  color: #aaa;
}

.search-page {
  display: flex;
  flex-direction: column;
  height: 80vh;
  padding: 20px;
  padding-bottom: env(safe-area-inset-bottom);
  gap: 10px;
}

.search-input-box {
  display: flex;
  flex-direction: row;
  gap: 10px;
  padding: 10px;
  background-color: #f2f2f2;
  border-radius: 10px;
}