page {
  padding-bottom: 100px;
}

.top-poster {
  position: relative;
  height: 500px;
}

.content {
  padding: 10px;
  font-size: 15px;
}

.divider {
  height: 10px;
  background-color: #f2f2f2;
  width: 100%;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.comment {
  padding: 10px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.time {
  color: #999;
}

.row {
  padding: 10px;
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.exposure {
  color: #999;
}