/* pages/myinfo/editinfo.wxss */
page {
  background-color: var(--default-background-color);
}

.bg-top {
  width: 100%;
  height: 50vh;
  z-index: -1;
  position: fixed;
}

.bg-top::after {
  content: '';
  position: absolute;
  background-image: linear-gradient(to bottom, #a18cd100 0%, var(--default-background-color) 100%);
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}

.whole {
  position: absolute;
  top: 20%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10px;
}


.left-top-button {
  z-index: 100;
  display: flex;
  justify-content: center;
  background-color: rgba(243, 245, 246, 0.50);
  backdrop-filter: blur(10px);
  position: fixed;
  align-items: center;
  padding: 15px;
  border: 1px solid #fff;
  border-radius: 40px;
  flex-direction: row;
  gap: 10px;
}

.avatar {
  width: 112px;
  height: 112px;
  border: 4px solid #fff;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10px;
}

.cell-group-box {
  width: 100%;
  padding: 20px;
}

.cell-group {
  height: 100px;
  width: 100%;
  background-color: white;
  border-radius: var(--border-radius);
}

.top-nav {
  top: 0;
  left: 0;
  position: fixed;
  z-index: 1000;
  width: 100%;
}

.content {
  position: absolute;
  text-align: center;
  width: calc(100% - 340rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  cursor: none;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}