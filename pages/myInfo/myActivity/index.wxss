/* pages/myInfo/myActivity/index.wxss */
page {
  background-color: var(--default-background-color);
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
}

.title {
  flex: 1;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
}

.more-box {
  padding: 0 10px;
}

.divider {
  margin: 10px 0;
  width: 100%;
  height: 1px;
  background-color: #f2f2f2;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 10px;
}

.activity {
  padding: 10px;
  background-color: white;
  border-radius: 10px;
}

.whole {
  padding-bottom: env(safe-area-inset-bottom);
}