/* pages/search/searchActivity/index.wxss */
page {
  background-color: var(--default-background-color);
  padding-bottom: env(safe-area-inset-bottom);
}

.activity-list-box {
  width: 100%;
}

.description{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity-item-box {
  position: relative;
  padding: 10px;
}

.activity-item {
  box-shadow: 0px 0px 20px 0px rgba(17, 17, 26, 0.18);
  position: relative;
  border-radius: 10px;
  overflow: hidden;
  background-color: white;
}

.activity-image {
  width: 100%;
  height: 120px;
}

.activity-content {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 15px;
}

.activity-title {
  font-weight: bold;
  font-size: 20px;
}

.label {
  min-width: 60px;
  position: absolute;
  right: 30px;
  top: 20px;
  font-weight: bolder;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f20c00;
  border-radius: 20px;
  font-size: 18px;
  z-index: 1;
  min-height: 25px;
}

.organization-box {
  display: flex;
  flex-direction: column;
}

.organization-item-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

