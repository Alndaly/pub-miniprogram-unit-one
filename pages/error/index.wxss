page {
  background-image: url('https://oss.weixiao.zuowu.cc/image/202302222040756.png');
  background-size: cover;
}

.banner {
  text-align: center;
  font-size: 30px;
  font-family: 'DouYu';
}

.bottom-box {
  width: 80%;
  font-size: 15px;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10px;
}

.contact-btn {
  font-size: 15px;
  background: none;
  box-sizing: border-box;
  font-family: inherit;
  color: white;
  margin: 0;
  position: relative;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  padding: 0 5px;
  text-decoration: underline;
}

button::after {
  border: none;
}

.whole {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20px;
  overflow: auto;
}

.message-box {
  width: 80%;
  height: 350px;
  overflow: auto;
  position: relative;
  padding: 20px;
  display: flex;
  flex-direction: column;
  border: 2px solid #f2be45;
  color: white;
  backdrop-filter: blur(10px);
  background-color: rgba(57, 47, 65, .4);
  border-radius: 10px;
  align-items: center;
}

.content {
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 100%;
}

.title {
  height: 50px;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 20px;
  font-family: 'DouYu';
}

.item {
  width: 100%;
}

.button {
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  width: 100%;
  background-color: white;
  border-radius: 50px;
}