/* pages/organization/add/index.wxss */
page {
  background-color: var(--default-background-color);
}

.whole {
  padding: 10px;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-pop-box {
  height: 60vh;
  display: flex;
  flex-direction: column;
  padding: 20px;
  padding-bottom: env(safe-area-inset-bottom);
  gap: 10px;
}

.organization-box {
  padding: 10px;
  border-radius: 10px;
  background-color: #f4798355;
  margin-bottom: 10px;
}

.input-box {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  background-color: #f2f2f2;
}

.organization-list {
  flex: 1;
  overflow: auto;
}

.box {
  background-color: white;
  padding: 10px;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.title {
  font-size: 15px;
}

.sub-title {
  font-size: 12px;
  color: #666;
}

.button {
  background-color: #f47983;
  padding: 10px;
  min-height: 50px;
  font-size: 20px;
  font-family: "DouYu";
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 50px;
}

.form{
  overflow: auto;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10px;
}