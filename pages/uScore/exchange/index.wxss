/* pages/uScore/exchange/index.wxss */
page {
  background-color: var(--default-background-color);
}


.item-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 10px;
  padding-bottom: env(safe-area-inset-bottom);
}

.item {
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 150px;
  padding: 10px;
  gap: 10px;
  background-color: white;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
  flex: 1;
  height: 100%;
  justify-content: center;
}

.title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
