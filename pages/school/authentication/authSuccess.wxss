.success-title {
  font-size: 30px;
  font-family: "DouYu";
}

.tip {
  font-size: 20px;
  font-family: Segoe UI;
  font-weight: 400;
}

.ability {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  background-color: #f2f2f2;
  color: #454545;
  border-radius: 10px;
  box-shadow: 0px 0px 20px 0px rgba(17, 17, 26, 0.18);
}

.ability>view {
  font-size: 17px;
  font-family: Segoe UI;
}

.unlock-ability{
  font-family: 'DouYu';
  font-size: 20px;
  color: white;
}

.my-button-box {
  z-index: 100;
  position: fixed;
  bottom: calc(50px + env(safe-area-inset-bottom));
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.my-button {
  height: 50px;
  width: 100%;
  border-radius: 10px;
  font-family: 'DouYu';
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 17px;
  background-color: #ffa631;
  box-shadow: 0px 0px 20px 0px rgba(17, 17, 26, 0.18);
  font-weight: bold;
}