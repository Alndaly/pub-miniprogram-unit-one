.whole {
  color: white;
  padding: 40px 20px;
  height: 100vh;
  width: 100vw;
  background-color: #2e4e7e;
  padding-bottom: calc( env(safe-area-inset-bottom) + 100px );
}

.top-image{
  margin-bottom: 20px;
}

.whole-container {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 10px;
  z-index: 100;
}
