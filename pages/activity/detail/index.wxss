.share-icon {
  width: 25px;
  height: 25px;
}

.btn-share {
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  gap: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  padding: 0 10px;
}

.btn-share::after {
  border: none;
}

.people-num {
  font-weight: bolder;
}

.num-content {
  align-self: flex-end;
}

.num {
  font-size: 25px;
  font-weight: bold;
  margin: 0 5px;
  color: #fa8c35;
}

.activity-detail {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 10px;
  border-radius: 10px;
  background-color: white;
  box-shadow: rgba(175, 202, 216, 0.5);
}

.activity-comment {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 10px;
  border-radius: 10px;
  background-color: white;
  box-shadow: rgba(175, 202, 216, 0.5);
}

.more-person-num {
  width: 40px;
  flex-shrink: 0;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #e5e5e5;
  font-weight: bold;

}

.persons {
  display: flex;
  flex-direction: row;
  flex: 1;
  overflow: auto;
  gap: 3px;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_activity {
  margin-right: 20px;
  display: inline-block;
  width: 135px;
}

.activity-box {
  width: 100%;
  position: relative;
  color: white;
  background-size: cover;
  border-radius: 10px;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.no-comment {
  color: #ccc;
  text-align: center;
}

.activity-container {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 10px;
  position: absolute;
  word-wrap: break-word;
  white-space: normal;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.other-activity {
  display: flex;
  flex-direction: column;
  gap: 5px;
  background-color: white;
  padding: 10px;
  border-radius: 10px;
}

button::after {
  border: none;
  border-radius: 0;
}

.comment-box-top {
  align-items: center;
  display: flex;
  padding: 10px;
  flex-direction: row;
  justify-content: space-between;
  font-size: 15px;
}

.comment-box-title {
  font-size: 18px;
  font-weight: bold;
}

.arrow-down {
  width: 0;
  height: 0;
  display: flex;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  border-top: 5px solid #aaa;
}

.comment-order {
  gap: 5px;
  color: #aaa;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.full-divider {
  height: 10px;
  width: 100%;
  background-color: #f8f8f8;
}

.operate-box {
  padding: 0 20px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.operate-font {
  line-height: 24px;
  font-size: 15px;
  box-sizing: border-box;
  white-space: nowrap;
  font-weight: 400;
}

.icon-image {
  width: 25px;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.operate-item-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.ugc-comment-list {
  background-color: white;
}

.ad-box {
  border-radius: 10px;
  overflow: hidden;
  margin: 20px;
}

.whole {
  display: flex;
  flex-direction: column;
  padding-bottom: calc(90px + env(safe-area-inset-bottom));
}

.block {
  height: 75px;
}

.divider {
  background-color: rgba(166, 166, 166, 0.15);
  height: 1px;
  margin: 8px 0;
  width: 100%;
}

.operate-v2 {
  padding: 10px 10px 0 10px;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.operate-v2-comment {
  width: 350rpx;
  height: 33px;
  font-size: 15px;
  color: rgba(150, 147, 147, 1);
  background-color: #f0f0f0b4;
  display: flex;
  justify-content: flex-start;
  padding: 0 25rpx;
  align-items: center;
  border-radius: 30px;
}

.icon-box {
  display: flex;
  flex-direction: row;
  gap: 5px;
  align-items: center;
  font-size: 15px;
}

.operate-v2-right {
  display: flex;
  flex-direction: row;
  gap: 40rpx;
}

.operate-v2-icon {
  width: 31px;
  height: 31px;
}

.btn-share {
  padding: 0;
  margin: 0;
  border: none;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.share-icon {
  width: 27px;
  height: 27px;
}

.btn-share::after {
  border: none;
}