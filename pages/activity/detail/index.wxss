/* pages/activity/detail/index.wxss */
page {
  background: rgb(247, 250, 254);
  padding-bottom: calc(env(safe-area-inset-bottom) + 50px);
}

.user-info-box {
  display: flex;
  flex-direction: row;
  gap: 5px;
  align-items: center;
}

.top-nav {
  top: 0;
  left: 0;
  position: fixed;
  z-index: 1000;
  width: 100%;
  background-color: rgba(35, 75, 127, 0.70);
}

.activity-title {
  white-space: normal;
  color: #454545;
  font-weight: bold;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  flex-direction: row;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.top-poster {
  position: relative;
  height: 500px;
}

.bg-image {
  height: 170px;
}

.title {
  line-height: 40px;
}

.time-location {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 10px;
  border-radius: 10px;
  background-color: white;
}

image {
  width: 100%;
}

video {
  width: 100%;
}

audio {
  width: 100%;
}

.whole-page {
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.base-info {
  padding: 10px;
  border-radius: 10px;
  background-color: white;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.box-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.more-button {
  color: #1afa29;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.more-icon {
  width: 20px;
  height: 20px;
}

.organization-box {
  display: flex;
  flex-direction: column;
}

.organization-item-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 3px;
  color: #aaa;
}

.organization-item {}


.back-button {
  display: flex;
  flex-direction: row;
  gap: 5px;
  z-index: 10000;
  color: white;
  display: flex;
  justify-content: center;
  background-color: rgba(243, 245, 246, 0.50);
  backdrop-filter: blur(10px);
  position: fixed;
  align-items: center;
  padding: 10px;
  border: 1px solid #fff;
  border-radius: 40px;
}


.top-nav>.content {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  flex-direction: row;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: white;
  position: absolute;
  text-align: center;
  width: calc(100% - 400rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  pointer-events: none;
}

.bottom {
  border-top: 1px solid rgb(230, 230, 228);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: rgb(246, 250, 249);
  padding: 10px;
  align-items: center;
  justify-content: flex-end;
  gap: 10px;
  padding-bottom: env(safe-area-inset-bottom);
}

.icon-list {
  display: flex;
  flex-direction: row;
}

.operate-font {
  line-height: 20px;
  font-size: 12px;
  box-sizing: border-box;
  white-space: nowrap;
  font-weight: 400;
  color: #666;
}

.now-user-cout {
  color: rgb(220, 220, 220);
}

.divider {
  height: 1px;
  width: 100%;
  background-color: #ddd;
  margin: 2px 0;
}

