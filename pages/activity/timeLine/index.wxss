page {
  background-color: rgb(246, 250, 249);
}

.no-activity{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100vw;
}

.button{
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50px;
  width: 100px;
  border-radius: 5px;
  background-color: #f35336;
  color: white;
  font-size: 17px;
  font-family: "DouYu";
}

.back-button {
  z-index: 100;
  color: black;
  display: flex;
  justify-content: center;
  background-color: white;
  backdrop-filter: blur(10px);
  position: fixed;
  align-items: center;
  padding: 10px;
  border: 1px solid #fff;
  border-radius: 40px;
}

.top-info {
  display: flex;
  flex-direction: row;
  gap: 10px;
  align-items: center;
}

.tags {
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.tag {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  padding: 0 8px;
  font-size: 13px;
  white-space: nowrap;
  color: white;
  background-color: red;
}

.time-box {
  display: flex;
  flex-direction: row;
  background-color: #f2f2f2;
  border-radius: 5px;
  padding: 10px;
  align-items: center;
  gap: 10px;
}

.detail {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.location-box {
  display: flex;
  flex-direction: row;
  background-color: #f2f2f2;
  border-radius: 5px;
  padding: 10px;
  align-items: center;
  gap: 10px;
}

.cd-container {
  max-width: 1080px;
  margin: 0 auto;
  padding: 0 10%;
  border-radius: 2px;
}

.cd-container::after {
  content: '';
  display: table;
  clear: both;
}

#cd-timeline {
  position: relative;
  padding: 0;
  padding-top: 100px;
  padding-bottom: env(safe-area-inset-bottom);
}

#cd-timeline::before {
  content: '';
  position: fixed;
  top: 0;
  left: 25px;
  height: 100vh;
  width: 1px;
  background: #d3d3d3;
}

.cd-timeline-block {
  position: relative;
  margin: 2em 0;
}

.cd-timeline-block:after {
  content: "";
  display: table;
  clear: both;
}

.cd-timeline-block:first-child {
  margin-top: 0;
}

.cd-timeline-block:last-child {
  margin-bottom: 0;
}

.cd-timeline-img {
  position: absolute;
  top: 19px;
  left: 21px;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  box-shadow: 0 0 0 3px rgb(36, 76, 164);
  /* background: rgb(36, 76, 164); */
}

.cd-timeline-content {
  background-color: white;
  border-radius: 10px;
  position: relative;
  display: flex;
  flex-direction: column;
  margin-left: 40px;
  margin-right: 15px;
  padding: 10px;
  gap: 10px;
}

.cd-timeline-content .timeline-content-info {
  padding: 5px 10px;
  font-size: 12px;
  box-shadow: inset 0 2px 0 rgba(0, 0, 0, 0.08);
  border-radius: 2px;
}

.cd-timeline-content .timeline-content-info i {
  margin-right: 5px;
}

.cd-timeline-content .timeline-content-info .timeline-content-info-title,
.cd-timeline-content .timeline-content-info .timeline-content-info-date {
  width: calc(50% - 2px);
  display: inline-block;
}

@media (max-width: 500px) {
  .cd-timeline-content .timeline-content-info .timeline-content-info-title,
  .cd-timeline-content .timeline-content-info .timeline-content-info-date {
    display: block;
    width: 100%;
  }
}

.cd-timeline-content .content-skills {
  font-size: 12px;
  padding: 0;
  margin-bottom: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.cd-timeline-content .content-skills li {
  background: #40484D;
  border-radius: 2px;
  display: inline-block;
  padding: 2px 10px;
  margin: 3px 2px;
  text-align: center;
  flex-grow: 1;
}

.cd-timeline-content:after {
  content: "";
  display: table;
  clear: both;
}

.cd-timeline-content h2 {
  margin-top: 0;
  margin-bottom: 5px;
}

.cd-timeline-content p,
.cd-timeline-content .cd-date {
  font-size: 13px;
  font-size: 0.8125rem;
}

.cd-timeline-content .cd-date {
  display: inline-block;
}

.cd-timeline-content p {
  line-height: 1.6;
}