/* components/ugc-comment-item/index.wxss */
.whole {
  width: 100%;
  height: 100%;
  display: flex;
  gap: 10px;
  flex-direction: row;
  padding: 10px;
  position: relative;
}

.comment-operate-box {
  display: flex;
  padding: 10px;
  flex-direction: column;
  align-items: center;
}

.icon-image {
  width: 20px;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-box {
  padding-top: 3px;
  display: flex;
  justify-content: flex-start;
  height: 100%;
}

.avatar {
  width: 41px;
  height: 41px;
  border-radius: 50%;
  background-position: center;
  background-size: cover;
}

.nickname {
  width: 100%;
  font-size: 14px;
  color: rgba(173, 173, 173, 1);
}

.user-info {
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.to_user {
  font-size: 15px;
  display: inline-block;
  margin-right: 5px;
}

.comment-content {
  font-size: 16px;
  display: inline-block;
}

.content {
  margin: 3px 0;
  flex: 1;
}

.comment-detail {
  overflow: auto;
  flex: 1;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
  overflow: auto;
  height: 80%;
}

.time {
  font-size: 14px;
  color: rgb(173, 173, 173);
}

.back-comment {
  color: rgb(117, 117, 117);
}

.upper-comment {
  border-radius: 5px;
  margin-bottom: 5px;
  background-color: rgba(211, 211, 211, 0.55);
  margin-top: 5px;
  padding: 10px;
}

.bottom {
  display: flex;
  flex-direction: row;
  gap: 10px;
}